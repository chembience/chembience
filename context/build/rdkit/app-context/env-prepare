#!/bin/bash
set -e

test -f .env && source .env

CUID="$(stat -c %u ~)"
CGID="$(stat -c %g ~)"

declare -a files=('./chembience.rdkit.env')
for f in "${files[@]}"; do
    sed -i -e 's?@RDKIT_APP_HOME?'`pwd`'?' $f
    sed -i -e "s/@CHEMBIENCE_UID/${CUID}/g" $f
    sed -i -e "s/@CHEMBIENCE_GID/${CGID}/g" $f
done

cp chembience.rdkit.env .env
