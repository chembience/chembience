#!/bin/bash
set -e

test -f .env && source .env

CUID="$(stat -c %u ~)"
CGID="$(stat -c %g ~)"

cp chembience.django.env .env

declare -a files=('./chembience.django.env')
for f in "${files[@]}"; do
    sed -i -e 's?@DJANGO_APP_HOME?'`pwd`'?' $f
    sed -i -e "s/@CHEMBIENCE_UID/${CUID}/g" $f
    sed -i -e "s/@CHEMBIENCE_GID/${CGID}/g" $f
done

cp chembience.django.env .env
