#!/bin/bash
set -e

source .env

CUID="$(stat -c %u ~)"
CGID="$(stat -c %g ~)"

cp chembience.django.env .env

sed -i -e "s/@CHEMBIENCE_VERSION/${CHEMBIENCE_VERSION}/g" .env

sed -i -e "s/@CHEMBIENCE_UID/${CUID}/g" .env
sed -i -e "s/@CHEMBIENCE_GID/${CGID}/g" .env

sed -i -e 's?@DJANGO_APP_HOME?'`pwd`'?' .env

