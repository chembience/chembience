#!/bin/bash
set -e

CUID="$(stat -c %u ~)"
CGID="$(stat -c %g ~)"

cp ./env.settings ./.env

sed -i -e "s/@CHEMBIENCE_UID/${CUID}/g" .env
sed -i -e "s/@CHEMBIENCE_GID/${CGID}/g" .env

source .env

mkdir -p $CHEMBIENCE_SPHERE \
&& mkdir -p $CHEMBIENCE_SHARE \
&& mkdir -p $DJANGO_APP_HOME \
&& mkdir -p $RDKIT_APP_HOME \
&& mkdir -p $JUPYTER_APP_HOME

cp .env ./context/base \
&& cp .env ./context/app \
&& cp .env ./context/base/base/chembience/bin \
&& cp .env ./context/base/django \
&& cp .env ./context/base/django/app-context \
&& cp .env ./context/base/rdkit \
&& cp .env ./context/base/rdkit/app-context \
&& cp .env ./context/base/jupyter/ \
&& cp .env ./context/base/jupyter/app-context \

docker-compose -f ./context/base/base/docker-compose.init.yml run --rm base
docker-compose -f ./context/base/django/docker-compose.init.yml run --rm django
docker-compose -f ./context/base/rdkit/docker-compose.init.yml run --rm rdkit
docker-compose -f ./context/base/jupyter/docker-compose.init.yml run --rm jupyter

cp .env $CHEMBIENCE_SHARE \
&& cp .env $DJANGO_APP_HOME \
&& cp .env $RDKIT_APP_HOME \
&& cp .env $JUPYTER_APP_HOME





