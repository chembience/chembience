#!/bin/bash
set -e

CUID="$(stat -c %u ~)"
CGID="$(stat -c %g ~)"

cp ./env.settings .env

sed -i -e "s/@CHEMBIENCE_UID/${CUID}/g" .env
sed -i -e "s/@CHEMBIENCE_GID/${CGID}/g" .env

cp .env ./context/base
cp .env ./context/app
cp .env ./context/base/base/chembience/bin
cp .env ./context/base/django
cp .env ./context/base/django/app-context
cp .env ./context/base/rdkit
cp .env ./context/base/rdkit/app-context
cp .env ./context/base/jupyter
cp .env ./context/base/jupyter/app-context
cp .env ./context/base/rdkit-conda-compile
cp .env ./context/base/rdkit-postgres-compile